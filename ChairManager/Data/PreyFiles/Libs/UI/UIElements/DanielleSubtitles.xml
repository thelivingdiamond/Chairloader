
<UIElements name="DanielleSubtitles">
 <UIElement name="DanielleSubtitles" render_lockless="1" render_over_binks="1">
  <GFx file="GFX/danielle_subtitles.gfx" layer="3">
   <Constraints>
    <Align mode="dynamic" valign="center" halign="center" scale="1" max="0"/>
   </Constraints>
  </GFx>
  <functions>
   <function name="setSafeFrame" funcname="sf.initStage">
    <param name="Width" desc="Screen Width" type="int"/>
    <param name="Height" desc="Screen Height" type="int"/>
    <param name="SafeFrame" desc="Percentage of area.  Typically 85-90" type="int"/>
   </function>
   <function name="setWidgetsScale" funcname="sf.resizeWidgets">
    <param name="Scale" desc="0-100%" type="int"/>
   </function>
   <function name="debugDrawSafeFrame" funcname="sf.drawSafeFrame"/>
   <function name="debugRemoveSafeFrame" funcname="sf.removeSafeFrame"/>
   <function name="HUDFadeOn" funcname="vis.HUDFadeOn"/>
   <function name="HUDFadeOut" funcname="vis.HUDFadeOut"/>
   <function name="HUDAlpha" funcname="sub.subtitleAlpha">
    <param name="Alpha" desc="0-100" type="int"/>
   </function>
   <function name="pauseUI" funcname="util.pauseUI">
    <param name="PauseBoolean" desc="true=pause, false=play" type="bool"/>
   </function>
   <function name="subtitlesVisibility" funcname="sub.subtitlesVisibility">
    <param name="isVisible" desc="" type="bool"/>
   </function>
   <function name="subtitleUpdate" funcname="sub.subtitleHUDUpdate">
    <param name="subtitleText" desc="html supported text" type="string"/>
   </function>
   <function name="subtitleClose" funcname="sub.subtitleHUDClose"/>
   <function name="subtitlePDAUpdate" funcname="sub.subtitlePDAUpdate">
    <param name="subtitleText" desc="html supported text" type="string"/>
   </function>
   <function name="subtitlePDAClose" funcname="sub.subtitlePDAClose"/>
   <function name="subtitleSetPDAVisible" funcname="sub.subtitleSetPDAVisible">
    <param name="isPDAVis" desc="toggles which subtitle is visible" type="bool"/>
   </function>
   <function name="subtitlesLetterboxAlpha" funcname="sub.setLetterboxAlpha">
    <param name="Alpha" desc="0-100" type="int"/>
   </function>
  </functions>
  <Events/>
  <Arrays/>
  <variables/>
 </UIElement>
</UIElements>