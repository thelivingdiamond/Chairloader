<?xml version="1.0"?>
<MergingPolicy
    xmlns="https://thelivingdiamond.github.io/Chairloader/Xsd/Chairloader"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://thelivingdiamond.github.io/Chairloader/Xsd/Chairloader ../../../../Xsd/Chairloader/MergingPolicy.xsd">
    <Node name="ArkAbilityPDA">
        <Attributes />

        <Collection type="nodeDict" />

        <ChildNodes>
            <Node name="Categories">
                <Attributes />
                <Collection type="dict">
                    <PrimaryKey>
                        <ChildAttribute name="Name" />
                    </PrimaryKey>
                </Collection>

                <ChildNodes>
                    <Node name="ArkAbilityCategory">
                        <Attributes>
                            <Attribute name="Name" type="string" required="true" readOnly="true" />
                            <Attribute name="Label" type="string" required="true" />
                            <Attribute name="Description" type="string" required="true" />
                            <Attribute name="Icon" type="string" required="true" />
                            <Attribute name="IsAlien" type="boolString" />
                        </Attributes>

                        <Collection type="nodeDict" />

                        <ChildNodes>
                            <Node name="Rows">
                                <Attributes />

                                <Patches>
                                    <AddChildIndex name="ch:index" />
                                </Patches>
        
                                <Collection type="array">
                                    <ChildIndexAttribute name="ch:index" />
                                </Collection>

                                <ChildNodes>
                                    <Node name="ArkAbilityRow">
                                        <Attributes>
                                            <Attribute name="ch:index" type="int32" required="true" readOnly="true" generated="true" />
                                        </Attributes>

                                        <Collection type="nodeDict" />

                                        <ChildNodes>
                                            <Node name="Abilities">
                                                <Attributes />

                                                <Patches>
                                                    <AddChildIndex name="ch:index" />
                                                </Patches>

                                                <Collection type="array">
                                                    <ChildIndexAttribute name="ch:index" />
                                                </Collection>

                                                <ChildNodes>
                                                    <Node name="Ability">
                                                        <Attributes>
                                                            <Attribute name="Value" type="ArkAbilityId" />
                                                            <Attribute name="ch:index" type="int32" required="true" readOnly="true" generated="true" />
                                                        </Attributes>
                                                    </Node>
                                                </ChildNodes>
                                            </Node>
                                        </ChildNodes>
                                    </Node>
                                </ChildNodes>
                            </Node>
                        </ChildNodes>
                    </Node>
                </ChildNodes>
            </Node>
        </ChildNodes>
    </Node>
</MergingPolicy>
