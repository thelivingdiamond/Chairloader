<?xml version="1.0"?>
<MergingPolicy
    xmlns="https://thelivingdiamond.github.io/Chairloader/Xsd/Chairloader/MergingPolicy.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://thelivingdiamond.github.io/Chairloader/Xsd/Chairloader/MergingPolicy.xsd ../../../../Xsd/Chairloader/MergingPolicy.xsd">
    <Node name="modifiers">
        <Attributes />

        <Collection type="dict">
            <PrimaryKey>
                <ChildAttribute name="id" />
            </PrimaryKey>
        </Collection>

        <ChildConstraints>
            <UniqueAttribute name="name" />
        </ChildConstraints>

        <ChildNodes>
            <Node name="modifier">
                <Attributes>
                    <Attribute name="name" type="string" required="true" readOnly="true" />
                    <Attribute name="id" type="ArkSignalModifierIdDef" required="true" readOnly="true" />
                </Attributes>

                <Collection type="nodeDict" />

                <ChildNodes>
                    <!-- FIXME 2024-05-09: Waiting for array support -->
                    <Node name="rule">
                        <Attributes />
                        <Collection type="nodeDict" />

                        <ChildNodes>
                            <Node name="inputFilters">
                                <Attributes />
                                <Collection type="dict">
                                    <PrimaryKey>
                                        <ChildName />
                                        <ChildAttribute name="signalID" />
                                    </PrimaryKey>
                                </Collection>

                                <ChildNodes>
                                    <Node name="matchingKey">
                                        <Attributes>
                                            <Attribute name="signalID" type="ArkSignalId" required="true" readOnly="true" />
                                        </Attributes>
                                    </Node>
                                </ChildNodes>
                            </Node>

                            <Node name="outputEffects">
                                <Attributes />
                                <Collection type="dict">
                                    <PrimaryKey>
                                        <ChildName />
                                        <ChildAttribute name="signalID" />
                                    </PrimaryKey>
                                </Collection>

                                <ChildNodes>
                                    <Node name="effect">
                                        <Attributes>
                                            <Attribute name="signalID" type="ArkSignalId" required="true" readOnly="true" />
                                            <Attribute name="scale" type="float" required="true" />
                                        </Attributes>
                                    </Node>
                                </ChildNodes>

                            </Node>
                        </ChildNodes>
                    </Node>
                </ChildNodes>
            </Node>
        </ChildNodes>
    </Node>
</MergingPolicy>
