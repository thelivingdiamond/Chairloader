<?xml version="1.0"?>
<MergingPolicy
    xmlns="https://thelivingdiamond.github.io/Chairloader/Xsd/Chairloader/MergingPolicy.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://thelivingdiamond.github.io/Chairloader/Xsd/Chairloader/MergingPolicy.xsd ../../../Xsd/Chairloader/MergingPolicy.xsd"
    fileNameRegex="(In)?validRegex\.xml"
    recursive="true">
    <Node name="RootNodeName">
        <Attributes />

        <Collection type="nodeDict" />

        <ChildNodes>
            <Node name="TestNode1">
                <Attributes>
                    <Attribute name="testValue" type="string" />
                </Attributes>

                <Collection type="dict">
                    <PrimaryKey>
                        <ChildAttribute name="signalInput" />
                        <ChildAttribute name="signalOutput" />
                    </PrimaryKey>
                </Collection>

                <ChildNodes>
                    <Node name="PositiveSignalValue">
                        <Attributes>
                            <Attribute name="signalInput" type="uint64" readOnly="true" required="true" />
                            <Attribute name="signalOutput" type="uint64" readOnly="true"  required="true" />
                            <Attribute name="scale" type="float" />
                        </Attributes>
                    </Node>
                    <Node name="NegativeSignalValue">
                        <Attributes>
                            <Attribute name="signalInput" type="uint64" readOnly="true" required="true" />
                            <Attribute name="signalOutput" type="uint64" readOnly="true"  required="true" />
                            <Attribute name="scale" type="float" />
                            <Attribute name="offset" type="float" />
                        </Attributes>
                    </Node>
                    <Node name=".*SignalValue" nameRegex="true" recursive="true">
                        <Attributes>
                            <Attribute name="signalInput" type="uint64" readOnly="true" required="true" />
                            <Attribute name="signalOutput" type="uint64" readOnly="true"  required="true" />
                        </Attributes>
                    </Node>
                </ChildNodes>
            </Node>
        </ChildNodes>
    </Node>
</MergingPolicy>
