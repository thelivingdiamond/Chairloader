 <Goalpipe name="PeekShootExample">
  <FireCmd mode="Off"/>
  <Timeout intervalMin="0.5" intervalMax="1.0"/>
  <If IF_RANDOM="0.45">
   <Peek timeout="2.15" timeoutRandomness="1.0"/>
   <If IF_SEES_TARGET="">
    <FireCmd mode="Burst"/>
    <AdjustAim timeout="4"/>
   </If>
   <Else/>
   <AdjustAim timeout="4"/>
  </If>
  <Timeout intervalMin="0.5" intervalMax="0.75"/>
 </Goalpipe>
