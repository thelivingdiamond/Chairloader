   <Timeout interval="1.0"/>
   <Else/>
   <Script code="entity:CallBehaviorFunction(&apos;StartCoverCheckTimer&apos;)"/>
   <Stick distance="1" locateName="refpoint"/>
   <Script code="entity:CallBehaviorFunction(&apos;MoveDone&apos;)"/>
  </If>
 </Goalpipe>
