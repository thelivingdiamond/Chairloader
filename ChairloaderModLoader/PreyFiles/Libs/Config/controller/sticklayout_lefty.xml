
<ActionMaps ignoreVersion="1">
 <actionmap name="player">
  <action name="xi_movey">
   <rebind device="xboxpad" input="xi_thumbry"/>
   <rebind device="ps4pad" input="pad_stickry"/>
  </action>
  <action name="xi_movex">
   <rebind device="xboxpad" input="xi_thumbrx"/>
   <rebind device="ps4pad" input="pad_stickrx"/>
  </action>
  <action name="xi_rotatepitch">
   <rebind device="xboxpad" input="xi_thumbly"/>
   <rebind device="ps4pad" input="pad_stickly"/>
  </action>
  <action name="xi_rotateyaw">
   <rebind device="xboxpad" input="xi_thumblx"/>
   <rebind device="ps4pad" input="pad_sticklx"/>
  </action>
 </actionmap>
 <actionmap name="vehicle_driver">
  <action name="xi_v_movex">
   <rebind device="xboxpad" input="xi_thumbrx"/>
   <rebind device="ps4pad" input="pad_stickrx"/>
  </action>
  <action name="xi_v_rotatepitch">
   <rebind device="xboxpad" input="xi_thumbly"/>
   <rebind device="ps4pad" input="pad_stickly"/>
  </action>
  <action name="xi_v_rotateyaw">
   <rebind device="xboxpad" input="xi_thumblx"/>
   <rebind device="ps4pad" input="pad_sticklx"/>
  </action>
 </actionmap>
</ActionMaps>