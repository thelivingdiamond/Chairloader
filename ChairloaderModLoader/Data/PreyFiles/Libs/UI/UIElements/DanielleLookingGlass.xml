    <param name="isBlinking" desc="" type="bool"/>
    <param name="textColor" desc="" type="string"/>
   </function>
   <function name="lookingGlassPlay" funcname="glass.playAnimation"/>
   <function name="pauseLookingGlass" funcname="util.pauseLookingGlass">
    <param name="PauseBoolean" desc="true=pause, false=play" type="bool"/>
